<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="233dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center_vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="16dp"

            app:cardElevation="4dp"
            android:layout_gravity="center"
            >

        <ImageView
            android:id="@+id/eventLogoImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"

            android:layout_gravity="center"
            android:src="@drawable/taj_mahal"
            android:contentDescription="Event Logo"
            android:background="@drawable/card_background"/> </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/eventNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"

                android:fadingEdge="horizontal"
                android:textColor="@android:color/black"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/curved_background"
                android:orientation="horizontal"
                android:padding="7dp"

                >
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="match_parent"

                android:src="@drawable/ic_action_calendar_today"

                />
            <TextView
                android:id="@+id/eventStartTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"

                android:fadingEdge="horizontal"

                android:textColor="@android:color/darker_gray"/>
 </LinearLayout>
           <TextView
               android:layout_gravity="center"
               android:id="@+id/eventStartTimeTextVie"
               android:layout_width="wrap_content"
               android:textColor="#00ED77"
               android:textStyle="bold"
               android:padding="2dp"
               android:layout_height="wrap_content"/></LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
